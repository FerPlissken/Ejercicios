public class Coche {

        int numPuertas;

        public Coche(int numPuertas){
            this.numPuertas = numPuertas;      }

        public void incPuerta(){
            this.numPuertas++;
            System.out.println("El numero de puertas que tiene el coche es: " + this.numPuertas);
        }

    public static void main(String[] args) {

            Coche miCoche = new Coche(0);
            miCoche.incPuerta();
    }
}
