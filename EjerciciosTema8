public class Persona {

    private String persona;
    public void setPersona (String persona) {
        this.persona = persona;
    }
    public String getPersona (){
        return this.persona;
    }
    private int edad;
    private String nombre;
    private int telf;

    public void setEdad (int edad){
        this.edad = edad;    }
    public int getEdad(){
        return this.edad;
    }

    public void setNombre (String nombre){
        this.nombre = nombre;
    }
    public String getNombre(){
        return this.nombre;
    }
    public void setTelf (int telf){
        this.telf = telf;
    }
    public int getTelf(){
        return this.telf;
    }

    public static void main(String[] args) {

        Persona edad = new Persona();
        edad.setPersona ("Edad");
        edad.setEdad (23);

        Persona nombre = new Persona();
        nombre.setPersona ("Nombre");
        nombre.setNombre ("Eduardo");

        Persona telf = new Persona();
        telf.setPersona ("Tel√©fono");
        telf.setTelf(902202122);

        System.out.println(edad.getPersona() + ": " + telf.getEdad());
        System.out.println(nombre.getPersona() + ": " + telf.getNombre());
        System.out.println(telf.getPersona() + ": " + telf.getTelf());

    }}
